\begin_layout Subsubsection*
Exercise 7.4 Consider a random variable 
\begin_inset Formula $Z_{n}$
\end_inset

 with the probability distribution
\end_layout

\begin_layout Subsubsection*
\begin_inset Formula 
\[
Z_{n}=\begin{cases}
-n & with\text{\ensuremath{\enskip probability\ 1/n}}\\
0 & with\text{\ensuremath{\enskip probability\ 1-2/n}}\\
n & with\text{\ensuremath{\enskip probability\ 1/n}}
\end{cases}
\]

\end_inset


\end_layout

\begin_layout Subsubsection*
(a) Does 
\begin_inset Formula $Z_{n}\stackrel{p}{\to}0$
\end_inset

 as 
\begin_inset Formula $n\to\infty$
\end_inset

?
\end_layout

\begin_layout Subsubsection*
(b) Calculate 
\begin_inset Formula $E[Z_{n}]$
\end_inset

.
\end_layout

\begin_layout Subsubsection*
(c) Calculate 
\begin_inset Formula $Var[Z_{n}]$
\end_inset

.
\end_layout

\begin_layout Subsubsection*
(d) Now suppose the distribution is
\begin_inset Formula 
\[
Z_{n}=\begin{cases}
0 & with\text{\ensuremath{\enskip probability\ 1-1/n}}\\
n & with\text{\ensuremath{\enskip probability\ }}1/n
\end{cases}
\]

\end_inset


\end_layout

\begin_layout Subsubsection*
Calculate 
\begin_inset Formula $E[Z_{n}]$
\end_inset

.
\end_layout

\begin_layout Subsubsection*
(e) Conclude that 
\begin_inset Formula $Z_{n}\stackrel{p}{\to}0$
\end_inset

 as 
\begin_inset Formula $n\to\infty$
\end_inset

 and 
\begin_inset Formula $E[Z_{n}]\to0$
\end_inset

 are unrelated.
\end_layout

\begin_layout Solution*

\series bold
7.4
\end_layout

\begin_layout Solution*
\paragraph_spacing double
(a) Take any 
\begin_inset Formula $\delta>0$
\end_inset

, as 
\begin_inset Formula $n\to\infty$
\end_inset


\begin_inset Formula 
\[
P\left(\omega:\left|Z_{n}\left(\omega\right)-0\right|>\delta\right)=P\left(\omega:Z_{n}\left(\omega\right)=-n\right)+P\left(\omega:Z_{n}\left(\omega\right)=n\right)=2/n\rightarrow0
\]

\end_inset


\end_layout

\begin_layout Solution*
\paragraph_spacing double
so that 
\begin_inset Formula $Z_{n}\stackrel{p}{\to}0$
\end_inset

 as 
\begin_inset Formula $n\to\infty$
\end_inset

.
\end_layout

\begin_layout Solution*
\paragraph_spacing double
(b) 
\begin_inset Formula $E[Z_{n}]=\left(-n\right)\times1/n+0\times\left(1-2/n\right)+n\times1/n=0$
\end_inset

.
\end_layout

\begin_layout Solution*
\paragraph_spacing double
(c) 
\begin_inset Formula $Var[Z_{n}]=E\left(Z_{n}-E[Z_{n}]\right)^{2}=\left(-n\right)^{2}\times1/n+0^{2}\times\left(1-2/n\right)+n^{2}\times1/n=2n$
\end_inset

.
\end_layout

\begin_layout Solution*
\paragraph_spacing double
(d) 
\begin_inset Formula $E[Z_{n}]=0\times\left(1-1/n\right)+n\times1/n=1$
\end_inset

.
\end_layout

\begin_layout Solution*
\paragraph_spacing double
(e) Take any 
\begin_inset Formula $\delta>0$
\end_inset

, as 
\begin_inset Formula $n\to\infty$
\end_inset


\begin_inset Formula 
\[
P\left(\omega:\left|Z_{n}\left(\omega\right)-0\right|>\delta\right)=P\left(\omega:Z_{n}\left(\omega\right)=n\right)=1/n\rightarrow0
\]

\end_inset


\end_layout

\begin_layout Solution*
\paragraph_spacing double
so that 
\begin_inset Formula $Z_{n}\stackrel{p}{\to}0$
\end_inset

 as 
\begin_inset Formula $n\to\infty$
\end_inset

 and 
\begin_inset Formula $E[Z_{n}]\to0$
\end_inset

 are unrelated.
\end_layout


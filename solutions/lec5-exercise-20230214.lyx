\begin_layout Subsubsection*
Exercise 22.1 Take the model 
\begin_inset Formula $Y=X'θ+e$
\end_inset

 where 
\begin_inset Formula $e$
\end_inset

 is independent of 
\begin_inset Formula $X$
\end_inset

 and has known density function 
\begin_inset Formula $f\left(e\right)$
\end_inset

 which is continuously differentiable.
 
\end_layout

\begin_layout Subsubsection*
(a) Show that the conditional density of 
\begin_inset Formula $Y$
\end_inset

 given 
\begin_inset Formula $X=x$
\end_inset

 is 
\begin_inset Formula $f\left(y−x'\theta\right)$
\end_inset

.
 
\end_layout

\begin_layout Subsubsection*
(b) Find the functions 
\begin_inset Formula $ρ\left(Y,X,θ\right)$
\end_inset

 and 
\begin_inset Formula $\psi\left(Y,X,θ\right)$
\end_inset

.
 
\end_layout

\begin_layout Subsubsection*
(c) Calculate the asymptotic covariance matrix.
\end_layout

\begin_layout Solution*

\series bold
22.1
\end_layout

\begin_layout Solution*
\paragraph_spacing double
(a) Since 
\begin_inset Formula $e=Y−X'\theta$
\end_inset

 is independent of 
\begin_inset Formula $X$
\end_inset

,
\begin_inset Formula 
\begin{align*}
f\left(Y−X'\theta\mid X\right) & =f\left(e\mid X\right)=f\left(e\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Solution*
then the conditional density of 
\begin_inset Formula $Y$
\end_inset

 given 
\begin_inset Formula $X=x$
\end_inset

 is 
\begin_inset Formula $f\left(y−x'\theta\right)$
\end_inset

.
\end_layout

\begin_layout Solution*
\paragraph_spacing double
(b) 
\begin_inset Formula 
\[
ρ\left(Y,X,θ\right)=\left(Y-X'\theta\right)^{2}
\]

\end_inset


\end_layout

\begin_layout Solution*
\begin_inset Formula 
\begin{align*}
\psi\left(Y,X,θ\right) & =\frac{\partial}{\partial\theta}ρ\left(Y,X,θ\right)\\
 & =\frac{\partial}{\partial\theta}\left(Y-X'\theta\right)^{2}\\
 & =-2\left(Y-X'\theta\right)X\\
 & =-2eX
\end{align*}

\end_inset


\end_layout

\begin_layout Solution*
(c) 
\begin_inset Formula 
\[
\frac{\partial}{\partial\theta}\psi\left(Y,X,θ\right)=\frac{\partial}{\partial\theta}\left(-2\left(Y-X'\theta\right)X\right)=2XX'
\]

\end_inset


\end_layout

\begin_layout Solution*
the asymptotic covariance matrix is
\begin_inset Formula 
\begin{align*}
 & \left(E\left[\frac{\partial}{\partial\theta}\psi_{i}\left(θ_{0}\right)\right]\right)^{-1}E\left[\psi_{i}\left(θ_{0}\right)\psi_{i}'\left(θ_{0}\right)\right]\left(E\left[\frac{\partial}{\partial\theta}\psi_{i}\left(θ_{0}\right)\right]\right)^{-1}\\
= & \left(E\left[2XX'\right]\right)^{-1}E\left[\left(-2eX\right)\left(-2eX\right)'\right]\left(E\left[2XX'\right]\right)^{-1}\\
= & \left(E\left[XX'\right]\right)^{-1}E\left[e^{2}XX'\right]\left(E\left[XX'\right]\right)^{-1}
\end{align*}

\end_inset


\end_layout


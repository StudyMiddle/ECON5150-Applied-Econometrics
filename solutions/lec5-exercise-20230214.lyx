\begin_layout Solution*
\paragraph_spacing double
\begin_inset Formula $g\left(u\right)$
\end_inset

 is continuous.
 
\end_layout

\begin_layout Solution*
\paragraph_spacing double
Since 
\begin_inset Formula $\frac{\partial}{\partial u}g\left(u\right)=\sin u$
\end_inset

 and 
\begin_inset Formula $\frac{\partial}{\partial u}g\left(u\right)$
\end_inset

 is continuous, 
\begin_inset Formula $g\left(u\right)$
\end_inset

 is differentiable.
\end_layout

\begin_layout Solution*
\paragraph_spacing double
Since 
\begin_inset Formula $\frac{\partial^{2}}{\partial u^{2}}g\left(u\right)=\cos u$
\end_inset

 and 
\begin_inset Formula $\frac{\partial^{2}}{\partial u^{2}}g\left(u\right)$
\end_inset

 is continuous, 
\begin_inset Formula $g\left(u\right)$
\end_inset

 is second differentiable.
\end_layout

\begin_layout Solution*
\paragraph_spacing double
(b) 
\end_layout

\begin_layout Solution*
\paragraph_spacing double
\begin_inset Formula 
\[
ρ\left(Y,X,θ\right)=g\left(Y−X'\theta\right)=1−\cos\left(Y−X'\theta\right)
\]

\end_inset


\end_layout

\begin_layout Solution*
\begin_inset Formula 
\begin{align*}
\psi\left(Y,X,θ\right) & =\frac{\partial}{\partial\theta}ρ\left(Y,X,θ\right)\\
 & =\frac{\partial}{\partial\theta}\left(1−\cos\left(Y−X'\theta\right)\right)\\
 & =\sin\left(e\right)X
\end{align*}

\end_inset


\end_layout

\begin_layout Solution*
(c) 
\begin_inset Formula 
\[
\frac{\partial}{\partial\theta}\psi\left(Y,X,θ\right)=\frac{\partial}{\partial\theta}\left(\sin\left(Y−X'\theta\right)X\right)=\cos\left(e\right)XX'
\]

\end_inset


\end_layout

\begin_layout Solution*
the asymptotic covariance matrix is
\begin_inset Formula 
\begin{align*}
 & \left(E\left[\frac{\partial}{\partial\theta}\psi_{i}\left(θ_{0}\right)\right]\right)^{-1}E\left[\psi_{i}\left(θ_{0}\right)\psi_{i}'\left(θ_{0}\right)\right]\left(E\left[\frac{\partial}{\partial\theta}\psi_{i}\left(θ_{0}\right)\right]\right)^{-1}\\
= & \left(E\left[\cos\left(e\right)XX'\right]\right)^{-1}E\left[\left(\sin\left(e\right)X\right)\left(\sin\left(e\right)X\right)'\right]\left(E\left[\cos\left(e\right)XX'\right]\right)^{-1}\\
= & \left(E\left[\cos\left(e\right)XX'\right]\right)^{-1}E\left[\sin^{2}\left(e\right)XX'\right]\left(E\left[\cos\left(e\right)XX'\right]\right)^{-1}
\end{align*}

\end_inset


\end_layout


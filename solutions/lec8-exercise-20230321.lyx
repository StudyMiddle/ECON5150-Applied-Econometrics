\begin_layout Subsubsection*
Exercise 14.1 For a scalar time series 
\begin_inset Formula $Y_{t}$
\end_inset

 define the sample autocovariance and autocorrelation 
\begin_inset Formula 
\[
\hat{\gamma}\left(k\right)=n^{-1}\sum_{t=k+1}^{n}\left(Y_{t}-\bar{Y}\right)\left(Y_{t-k}-\bar{Y}\right)
\]

\end_inset


\begin_inset Formula 
\[
\hat{\rho}\left(k\right)=\frac{\hat{\gamma}\left(k\right)}{\hat{\gamma}\left(0\right)}=\frac{\sum_{t=k+1}^{n}\left(Y_{t}-\bar{Y}\right)\left(Y_{t-k}-\bar{Y}\right)}{\sum_{t=1}^{n}\left(Y_{t}-\bar{Y}\right)^{2}}.
\]

\end_inset

 Assume the series is strictly stationary, ergodic, strictly stationary,
 and 
\begin_inset Formula $E\left[Y_{t}^{2}\right]<\infty$
\end_inset

.
 Show that 
\begin_inset Formula $\hat{\gamma}\left(k\right)\overset{p}{\to}\gamma\left(k\right)$
\end_inset

 and 
\begin_inset Formula $\hat{\rho}\left(k\right)\overset{p}{\to}\gamma\left(k\right)$
\end_inset

 as 
\begin_inset Formula $n\to\infty$
\end_inset

.
 (Use the Ergodic Theorem.)
\end_layout

\begin_layout Solution*

\series bold
14.1
\end_layout

\begin_layout Solution*
(1) Since 
\begin_inset Formula $Y_{t}$
\end_inset

 is strictly stationarity, its transformation 
\begin_inset Formula $\left(Y_{t}-\bar{Y}\right)\left(Y_{t-k}-\bar{Y}\right)$
\end_inset

 is also strictly stationarity.
\end_layout

\begin_layout Solution*
Use the Ergodic Theorem,
\begin_inset Formula 
\[
\left(n-k-1\right)^{-1}\sum_{t=k+1}^{n}\left(Y_{t}-\bar{Y}\right)\left(Y_{t-k}-\bar{Y}\right)\overset{p}{\to}E\left[\left(Y_{t}-\bar{Y}\right)\left(Y_{t-k}-\bar{Y}\right)\right]=\gamma\left(k\right)
\]

\end_inset


\end_layout

\begin_layout Solution*
as 
\begin_inset Formula $n\to\infty$
\end_inset

, and therefore 
\begin_inset Formula 
\[
\hat{\gamma}\left(k\right)=n^{-1}\sum_{t=k+1}^{n}\left(Y_{t}-\bar{Y}\right)\left(Y_{t-k}-\bar{Y}\right)=\frac{n-k-1}{n}\times\frac{1}{n-k-1}\sum_{t=k+1}^{n}\left(Y_{t}-\bar{Y}\right)\left(Y_{t-k}-\bar{Y}\right)\overset{p}{\to}\gamma\left(k\right).
\]

\end_inset


\end_layout

\begin_layout Solution*
(2) 
\begin_inset Formula 
\[
\hat{\rho}\left(k\right)=\frac{\hat{\gamma}\left(k\right)}{\hat{\gamma}\left(0\right)}\overset{p}{\to}\frac{\gamma\left(k\right)}{\gamma\left(0\right)}=\rho\left(k\right)
\]

\end_inset


\end_layout


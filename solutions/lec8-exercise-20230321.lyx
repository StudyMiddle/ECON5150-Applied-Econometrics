\begin_layout Subsubsection*
Exercise 14.8 Suppose 
\begin_inset Formula $Y_{t}=Y_{t-1}+e_{t}$
\end_inset

 with 
\begin_inset Formula $e_{t}$
\end_inset

 i.i.d.
 (0,1) and 
\begin_inset Formula $Y_{0}=0$
\end_inset

.
 Find 
\begin_inset Formula $var\left[Y_{t}\right]$
\end_inset

.
 Is 
\begin_inset Formula $Y_{t}$
\end_inset

 stationary?
\end_layout

\begin_layout Solution*

\series bold
14.8
\end_layout

\begin_layout Solution*
\paragraph_spacing double
(1) 
\begin_inset Formula 
\begin{align*}
Y_{t} & =Y_{t-1}+e_{t}\\
 & =Y_{t-2}+e_{t-1}+e_{t}\\
 & =Y_{t-3}+e_{t-2}+e_{t-1}+e_{t}\\
 & \vdots\\
 & =Y_{0}+e_{1}\cdots+e_{t-2}+e_{t-1}+e_{t}\\
 & =\sum_{i=1}^{t}e_{i}
\end{align*}

\end_inset


\end_layout

\begin_layout Solution*
\begin_inset Formula 
\[
var\left[Y_{t}\right]=var\left[\sum_{i=1}^{t}e_{i}\right]=\sum_{i=1}^{t}var\left[e_{i}\right]=\sum_{i=1}^{t}1=t
\]

\end_inset


\end_layout

\begin_layout Solution*
(2) 
\begin_inset Formula $Y_{t}$
\end_inset

 is not stationary because 
\begin_inset Formula $var\left[Y_{t}\right]$
\end_inset

 varies with 
\begin_inset Formula $t$
\end_inset

.
\end_layout


\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Subsubsection*
Exercise 14.3 Let 
\begin_inset Formula $\sigma_{t}^{2}=E\left[e_{t}^{2}\mid\mathscr{F}_{t-1}\right]$
\end_inset

.
 Show that 
\begin_inset Formula $u_{t}=e_{t}^{2}-\sigma_{t}^{2}$
\end_inset

 is a MDS.
\end_layout

\begin_layout Solution*

\series bold
14.3
\end_layout

\begin_layout Solution*
(1) 
\begin_inset Formula $\sigma_{t}^{2}=E\left[e_{t}^{2}\mid\mathscr{F}_{t-1}\right]$
\end_inset

 is adapted to 
\begin_inset Formula $\mathscr{F}_{t}$
\end_inset

.
\end_layout

\begin_layout Solution*
(2) 
\begin_inset Formula $E\left|\sigma_{t}^{2}\right|=E\left|E\left[e_{t}^{2}\mid\mathscr{F}_{t-1}\right]\right|<\infty$
\end_inset

.
\end_layout

\begin_layout Solution*
(3) 
\begin_inset Formula 
\begin{align*}
E\left[u_{t}\mid\mathscr{F}_{t-1}\right] & =E\left[e_{t}^{2}-\sigma_{t}^{2}\mid\mathscr{F}_{t-1}\right]\\
 & =E\left[e_{t}^{2}-E\left[e_{t}^{2}\mid\mathscr{F}_{t-1}\right]\mid\mathscr{F}_{t-1}\right]\\
 & =E\left[e_{t}^{2}\mid\mathscr{F}_{t-1}\right]-E\left[e_{t}^{2}\mid\mathscr{F}_{t-1}\right]=0
\end{align*}

\end_inset


\end_layout

\begin_layout Solution*
Therefore, 
\begin_inset Formula $u_{t}=e_{t}^{2}-\sigma_{t}^{2}$
\end_inset

 is a MDS.
\end_layout


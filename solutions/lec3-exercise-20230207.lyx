\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Subsubsection*
Exercise 18.3 Define 
\begin_inset Formula $\nu_{n}\left(\theta\right)=\frac{1}{\sqrt{n}}\sum_{i=1}^{n}X_{i}\mathbb{I}\left(X_{i}\leq\theta\right)$
\end_inset

 for 
\begin_inset Formula $\theta\in\left[0,1\right]$
\end_inset

 where 
\begin_inset Formula $E\left[X\right]=0$
\end_inset

 and 
\begin_inset Formula $E\left[X^{2}\right]=1$
\end_inset

.
 
\end_layout

\begin_layout Subsubsection*
(a) Show that 
\begin_inset Formula $\nu_{n}\left(\theta\right)$
\end_inset

 is stochastically equicontinuous.
 
\end_layout

\begin_layout Subsubsection*
(b) Find the stochastic process 
\begin_inset Formula $\nu\left(\theta\right)$
\end_inset

 which has asymptotic finite dimensional distributions of 
\begin_inset Formula $\nu_{n}\left(\theta\right)$
\end_inset

.
 
\end_layout

\begin_layout Subsubsection*
(c) Show that 
\begin_inset Formula $\nu_{n}\stackrel{d}{\to}\nu$
\end_inset

.
\end_layout

\begin_layout Solution*

\series bold
18.3
\end_layout

\begin_layout Solution*
\paragraph_spacing double
(a) 
\end_layout

\begin_layout Solution*
\begin_inset Formula 
\[
E\left[X_{i}\mathbb{I}\left(X_{i}\leq\theta\right)\right]=F\left(\theta\right)\times E\left[X\right]+\left(1-\text{\ensuremath{F\left(\theta\right)}}\right)\times0=0
\]

\end_inset


\end_layout

\begin_layout Solution*
\paragraph_spacing double
\begin_inset Formula 
\[
\nu_{n}\left(\theta\right)=\frac{1}{\sqrt{n}}\sum_{i=1}^{n}\left(X_{i}\mathbb{I}\left(X_{i}\leq\theta\right)-E\left[X_{i}\mathbb{I}\left(X_{i}\leq\theta\right)\right]\right)
\]

\end_inset


\end_layout

\begin_layout Solution*
\paragraph_spacing double
To show that 
\begin_inset Formula $\nu_{n}\left(\theta\right)$
\end_inset

 is stochastically equicontinuous, we need to show that 
\begin_inset Formula $J_{\left[\;\right]}\left(1,L_{2}\left(F\right)\right)<\infty$
\end_inset

.
\end_layout

\begin_layout Solution*
A sufficient condition for 
\begin_inset Formula $J_{\left[\;\right]}\left(1,L_{2}\left(F\right)\right)<\infty$
\end_inset

 is that 
\begin_inset Formula $N_{[\,]}\left(\varepsilon,L_{2}\left(F\right)\right)\leq O\left(\varepsilon^{-\rho}\right)$
\end_inset

 for some 
\begin_inset Formula $0<\rho<\infty$
\end_inset

.
\end_layout

\begin_layout Solution*
\paragraph_spacing double
Set 
\begin_inset Formula $N=2\varepsilon^{-2}$
\end_inset

, 
\begin_inset Formula $\theta_{j}=f\left(\frac{j}{N}\right)$
\end_inset

, 
\begin_inset Formula $l_{j}\left(x\right)=x\mathbb{I}\left(x\leq\theta_{j+1}\right)$
\end_inset

 and 
\begin_inset Formula $u_{j}\left(x\right)=x\mathbb{I}\left(x\leq\theta_{j}\right)$
\end_inset

,
\end_layout

\begin_layout Solution*
\paragraph_spacing double
where 
\begin_inset Formula $f\left(\frac{j}{N}\right)$
\end_inset

 is the quantile function of a distribution 
\begin_inset Formula $F\left(x\right)$
\end_inset

, and 
\begin_inset Formula $\frac{j}{N}\leq F\left(\theta_{j}\right)<\frac{j+1}{N}$
\end_inset

.
\end_layout

\begin_layout Solution*
The pair 
\begin_inset Formula $\left[l_{j},u_{j}\right]$
\end_inset

 brackets 
\begin_inset Formula $g\left(x,\theta\right)=x\mathbb{I}\left(x\leq\theta\right)$
\end_inset

 for 
\begin_inset Formula $\theta_{j}<\theta\leq\theta_{j+1}$
\end_inset

.
\end_layout

\begin_layout Solution*
\begin_inset Formula 
\[
\begin{array}{c}
\begin{array}{c}
\left\Vert u_{j}\left(x\right)-l_{j}\left(x\right)\right\Vert _{Q,2}=\left(F\left(\theta_{j+1}\right)-F\left(\theta_{j}\right)\right)^{1/2}\leq\left(\frac{j+2}{N}-\frac{j}{N}\right)^{1/2}=\left(\frac{2}{N}\right)^{1/2}=\varepsilon\end{array}\end{array}
\]

\end_inset


\end_layout

\begin_layout Solution*
Thus 
\begin_inset Formula $N_{[\,]}\left(\varepsilon,L_{r}\left(Q\right)\right)\leq N=2\varepsilon^{-2}=O\left(\varepsilon^{-\rho}\right)$
\end_inset

.
\end_layout

\begin_layout Solution*
Therefore, 
\begin_inset Formula $\nu_{n}\left(\theta\right)$
\end_inset

 is stochastically equicontinuous.
\end_layout

\begin_layout Solution*
\paragraph_spacing double
(b) 
\end_layout

\begin_layout Solution*
\begin_inset Formula 
\[
u_{i}\left(\theta\right)=X_{i}\mathbb{I}\left(X_{i}\leq\theta\right)-E\left[X_{i}\mathbb{I}\left(X_{i}\leq\theta\right)\right]=X_{i}\mathbb{I}\left(X_{i}\leq\theta\right)
\]

\end_inset


\end_layout

\begin_layout Solution*
\begin_inset Formula 
\[
\begin{array}{cl}
var\left[u_{i}\left(\theta\right)\right]=var\left[X_{i}\mathbb{I}\left(X_{i}\leq\theta\right)\right] & =E\left[X_{i}\mathbb{I}\left(X_{i}\leq\theta\right)\right]^{2}-E^{2}\left[X_{i}\mathbb{I}\left(X_{i}\leq\theta\right)\right]\\
 & =E\left[X_{i}^{2}\mathbb{I}\left(X_{i}\leq\theta\right)\right]\\
 & =F\left(\theta\right)\times E\left[X^{2}\right]+\left(1-\text{F\left(\theta\right)}\right)\times0=F\left(\theta\right)
\end{array}
\]

\end_inset


\end_layout

\begin_layout Solution*
By the CLT
\end_layout

\begin_layout Solution*
\begin_inset Formula 
\[
\nu_{n}\left(\theta\right)\stackrel{d}{\to}N\left(0,F\left(\theta\right)\right)
\]

\end_inset


\end_layout

\begin_layout Solution*
\paragraph_spacing double
(c) 
\end_layout

\begin_layout Solution*
\begin_inset Formula 
\[
\begin{array}{cl}
Cov\left(u_{i}\left(\theta_{1}\right),u_{i}\left(\theta_{2}\right)\right) & =Cov\left(X\mathbb{I}\left(X\leq\theta_{1}\right),X\mathbb{I}\left(X\leq\theta_{2}\right)\right)\\
 & =E\left[X^{2}\mathbb{I}\left(X\leq\theta_{1}\right)\mathbb{I}\left(X\leq\theta_{2}\right)\right]\\
 & =F\left(\theta_{1}\wedge\theta_{2}\right)
\end{array}
\]

\end_inset


\end_layout

\begin_layout Solution*
Since 
\begin_inset Formula $u_{i}\left(\theta\right)$
\end_inset

 is i.i.d
\end_layout

\begin_layout Solution*
\begin_inset Formula 
\[
\left(\begin{array}{c}
\nu_{n}\left(\theta_{1}\right)\\
\nu_{n}\left(\theta_{2}\right)
\end{array}\right)=\sqrt{n}\sum_{i=1}^{n}\left(\begin{array}{c}
X\mathbb{I}\left(X\leq\theta_{1}\right)\\
X\mathbb{I}\left(X\leq\theta_{2}\right)
\end{array}\right)\stackrel{d}{\to}N\left(\left(\begin{array}{c}
0\\
0
\end{array}\right),\left(\begin{array}{cc}
F\left(\theta_{1}\right) & F\left(\theta_{1}\wedge\theta_{2}\right)\\
F\left(\theta_{1}\wedge\theta_{2}\right) & F\left(\theta_{2}\right)
\end{array}\right)\right)
\]

\end_inset


\end_layout

\begin_layout Solution*
The joint distribution is satisfied for any finity 
\begin_inset Formula $\theta_{1},\theta_{2},...,\theta_{m}$
\end_inset

, so 
\begin_inset Formula $\left(\nu_{n}\left(\theta_{1}\right),\nu_{n}\left(\theta_{2}\right),...,\nu_{n}\left(\theta_{m}\right)\right)\stackrel{d}{\to}\left(\nu\left(\theta_{1}\right),\nu\left(\theta_{2}\right),...,\nu\left(\theta_{m}\right)\right)$
\end_inset

 for every finite set 
\begin_inset Formula $\theta_{1},\theta_{2},...,\theta_{m}\in\theta\in\left[0,1\right]$
\end_inset


\end_layout

\begin_layout Solution*
Since 
\begin_inset Formula $\nu_{n}\left(\theta\right)$
\end_inset

 is stochastically equicontinuous, 
\begin_inset Formula $\nu_{n}\stackrel{d}{\to}\nu$
\end_inset

.
\end_layout


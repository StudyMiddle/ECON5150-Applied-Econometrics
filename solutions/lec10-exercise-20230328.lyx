\begin_layout Section
Nonstationary Times Series
\end_layout

\begin_layout Subsubsection*
Exercise 16.1 Take 
\begin_inset Formula $S_{t}=S_{t-1}+e_{t}$
\end_inset

 with 
\begin_inset Formula $S_{0}=0$
\end_inset

 and 
\begin_inset Formula $e_{t}$
\end_inset

 i.i.d.
 
\begin_inset Formula $N\left(0,\sigma^{2}\right)$
\end_inset

.
 
\end_layout

\begin_layout Subsubsection*
(a) Calculate 
\begin_inset Formula $E\left[S_{t}\right]$
\end_inset

 and 
\begin_inset Formula $var\left[S_{t}\right]$
\end_inset

.
 
\end_layout

\begin_layout Subsubsection*
(b) Set 
\begin_inset Formula $Y_{t}=\left(S_{t}-E\left[S_{t}\right]\right)/\sqrt{var\left[S_{t}\right]}$
\end_inset

.
 By construction 
\begin_inset Formula $E\left[Y_{t}\right]=0$
\end_inset

 and 
\begin_inset Formula $var\left[Y_{t}\right]=1$
\end_inset

.
 Is 
\begin_inset Formula $Y_{t}$
\end_inset

 stationary? 
\end_layout

\begin_layout Subsubsection*
(c) Find the asymptotic distribution of 
\begin_inset Formula $Y_{\left\lfloor nr\right\rfloor }$
\end_inset

 for 
\begin_inset Formula $r\in\left[\delta,1\right]$
\end_inset

.
\end_layout

\begin_layout Solution*

\series bold
16.1
\end_layout

\begin_layout Solution*
(a)
\begin_inset Formula 
\begin{align*}
E\left[S_{t}\right] & =E\left[S_{t-1}+e_{t}\right]\\
 & =E\left[e_{1}+e_{2}+\cdots+e_{t}\right]\\
 & =E\left[\sum_{i=1}^{t}e_{i}\right]\\
 & =\sum_{i=1}^{t}E\left[e_{i}\right]=0
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
var\left(S_{t}\right) & =var\left(\sum_{i=1}^{t}e_{i}\right)\\
 & =\sum_{i=1}^{t}var\left(e_{i}\right)\\
 & =t\sigma^{2}
\end{align*}

\end_inset


\end_layout

\begin_layout Solution*
(b)
\end_layout

\begin_layout Solution*
\begin_inset Formula 
\[
Y_{t}=\frac{S_{t}-E\left[S_{t}\right]}{\sqrt{var\left[S_{t}\right]}}=\frac{S_{t}}{\sqrt{t}\sigma}=\frac{\sum_{i=1}^{t}e_{i}}{\sqrt{t}\sigma}=\frac{1}{\sigma}\frac{1}{\sqrt{t}}\sum_{i=1}^{t}e_{i}
\]

\end_inset


\end_layout

\begin_layout Solution*
\begin_inset Formula 
\begin{align*}
Cov\left(Y_{t},Y_{t+k}\right) & =E\left[\left(Y_{t}-E\left[Y_{t}\right]\right)\left(Y_{t+k}-E\left[Y_{t+k}\right]\right)\right]\\
 & =E\left[Y_{t}Y_{t+k}\right]\\
 & =E\left[\frac{1}{\sigma}\frac{1}{\sqrt{t}}\sum_{i=1}^{t}e_{i}\frac{1}{\sigma}\frac{1}{\sqrt{t+k}}\sum_{i=1}^{t+k}e_{i}\right]\\
 & =\frac{1}{\sigma^{2}\sqrt{t\left(t+k\right)}}E\left[\left(e_{1}+\cdots+e_{t}\right)\left(e_{1}+\cdots+e_{t}+\cdots e_{t+k}\right)\right]\\
 & =\frac{1}{\sigma^{2}\sqrt{t\left(t+k\right)}}\sum_{i=1}^{t}E\left[e_{i}^{2}\right]\\
 & =\sqrt{\frac{t}{t+k}}
\end{align*}

\end_inset


\end_layout

\begin_layout Solution*
Therefore, 
\begin_inset Formula $Y_{t}$
\end_inset

 is not stationary.
\end_layout

\begin_layout Solution*
(c) 
\begin_inset Formula 
\[
Y_{\left\lfloor nr\right\rfloor }=\frac{S_{\left\lfloor nr\right\rfloor }-E\left[S_{\left\lfloor nr\right\rfloor }\right]}{\sqrt{var\left[S_{\left\lfloor nr\right\rfloor }\right]}}=\frac{S_{\left\lfloor nr\right\rfloor }}{\sqrt{\left\lfloor nr\right\rfloor }\sigma}=\frac{\sum_{i=1}^{\left\lfloor nr\right\rfloor }e_{i}}{\sqrt{\left\lfloor nr\right\rfloor }\sigma}\sim N\left(0,1\right)
\]

\end_inset


\end_layout

